extends common/_layout

block head
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    style(type="text/css")
        body {
            padding-top: 60px;
            padding-bottom: 40px;
        }
block content
    // Navbar start
    .navbar.navbar-inverse.navbar-fixed-top
        .navbar-inner
            .container
                a.brand(href="./") Snode
                form#search_form.navbar-search(action="/")
                    input.search-query(type="text", name="q")
                .nav-collapse.collapse.pull-right
                    ul.nav
                        li.active
                            a(href="./") 首页
                        li
                            a(href="./blog") blog
                        li
                            a(href="./demo") demo
                        li.divider-vertical
                        li
                            a(href="./signup") 注册
                        li
                            a(href="./login") 登陆
    // Navbar end
    // container start
    .container
        // Main hero unit for a primary marketing message or call to action
        .hero-unit
            #photoBox.pics
                img(src="./imgs/lenovo_001.jpg")
                img(src="./imgs/lenovo_002.jpg")
                img(src="./imgs/lenovo_003.jpg")
        hr
        // footer start
        footer
            div
                | 本站采用
                a(href="http://nodejs.org/", target="_blank") nodejs
                | 开发使用
                a(href="http://www.mysql.com/", target="_blank") mysql
                | 数据库，欢迎nodejs爱好者一起来学习，探讨！
            .pull-right
                div
                    a(href="http://weibo.com/lcm596392912", target="_blank")
                        img(src="/imgs/auth-weibo.png", alt="新浪微博")
                        | &nbsp;新浪微博
                    a(href="http://t.qq.com/lcm-596392912", target="_blank")
                        img(src="/imgs/auth-qq.png", alt="腾讯微博")
                        | &nbsp;腾讯微博
                a(target="_blank", href="https://www.appfog.com/") Appfog
                | 提供云空间和数据支持
        // footer end
    // container end
    // javascript start
    script(src="/javascripts/bootstrap.js", charset="UTF-8")
    script(src="/javascripts/jquery.cycle.all.js", charset="UTF-8")
    script(src="/javascripts/jquery.easing.1.3.js", charset="UTF-8")
    // javascript end
    script(charset="UTF-8")
        $(function(){
            $('#photoBox').cycle({
                 fx:     'shuffle',
                easing: 'easeOutBack',
                delay:  -4000
            });
        });
