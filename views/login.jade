extends common/_layout
block meta
    style(type="text/css")
        .form-signin {
        max-width: 300px;
        padding: 19px 29px 29px;
        margin: 0 auto 20px;
        background-color: #fff;
        border: 1px solid #e5e5e5;
        -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
                border-radius: 5px;
        -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
                box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }
block navbar
    navLogin = 'active'
    include common/_navbar
block content
    form(class="form-signin", action="login", method="post")
        h2.form-signin-heading 登陆
        input(type="text", name="user[name]", class="input-block-level", placeholder="`邮箱", required)
        input(type="password", name="user[pwd]", class="input-block-level", placeholder="Password", required)
        label.checkbox
            input(type="checkbox", name="remember",  value="1", checked)
            |记住密码
        button(class="btn btn-block btn-primary", type="submit", value="登陆") 登陆
